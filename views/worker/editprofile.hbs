<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Create a new account</h2>
            <form action="/worker/editprofile" method="post"> 
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="Name" placeholder="Enter name" required value="{{work.Name}}">
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input type="Number" class="form-control" name="Phone" placeholder="Phone" required value="{{work.Phone}}">
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" name="Address" placeholder="Address" required value="{{work.Address}}">
                </div>
                <div class="form-group">
                    <label>DateOfBirth</label>
                    <input type="date" class="form-control" name="DateOfBirth" placeholder="DateOfBirth" required value="{{work.DateOfBirth}}">
                </div>
                <div class="form-group">
                    <label>Experience</label>
                    <input type="text" class="form-control" name="Experience" placeholder="Experience" required value="{{work.Experience}}">
                </div>
                <div class="form-group">
                    <label>Qualification</label>
                    <input type="text" class="form-control" name="Qualification" placeholder="Qualification" required value="{{work.Qualification}}">
                </div>
                
                
                
                <button type="submit" class="btn btn-primary float-right">Submit</button>
            </form>
        </div>

    </div>
</div>