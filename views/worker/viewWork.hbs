<section>
    
    <div class="container" id="table_id">
      <div class="row mt-2">
          <h2>Works</h2>
            <a href="/worker/addwork" class="btn btn-success ml-auto" style="height: 28px;">Add Work</a>
        </div>
    <table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Estimate price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each work12}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.works.Name}}</td>
      <td>{{this.works.Category}}</td>
      <td>{{this.works.Description}}</td>
      <td>{{this.works.Price}}</td>
      <td><img style="width: 50px;height: 50px" src="/images/work/{{this._id}}.png" alt=""></td>
      <td>
        <a href="/worker/editwork/{{this._id}}" class="btn btn-primary">Edit</a>
         <a href="/worker/delete-work/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want to delete {{this.works.Name}} ?')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>

<script>
  $(document).ready( function () {
    $('#table_id').DataTable();
} );
</script>