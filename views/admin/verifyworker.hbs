<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">verifyworker</h2>
            <form action="/admin/verifyworker/{{content._id}}" method="post"> 
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="Name" placeholder="Enter name" required value="{{content.Name}}">
                    <input type="text" hidden class="form-control" name="oldid" placeholder="Enter name" required value="{{content._id}}">
                </div>
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter email" required value="{{content.Email}}">

                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input hidden type="Password" class="form-control" name="Password" placeholder="Password" required value="{{content.Password}}">
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input type="Number" class="form-control" name="Phone" placeholder="Phone" required value="{{content.Phone}}">
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" name="Address" placeholder="Address" required value="{{content.Address}}">
                </div>
                <div class="form-group">
                    <label>DateOfBirth</label>
                    <input type="date" class="form-control" name="DateOfBirth" placeholder="DateOfBirth" required value="{{content.DateOfBirth}}">
                </div>
                <div class="form-group">
                    <label>Category</label>
                    <br>
                    <select name="category" >
                    <option value="{{content.category}}">{{content.category}}</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Experience</label>
                    <input type="text" class="form-control" name="Experience" placeholder="Experience" required value="{{content.Experience}}">
                </div>
                <div class="form-group">
                    <label>Qualification</label>
                    <input type="text" class="form-control" name="Qualification" placeholder="Qualification" required value="{{content.Qualification}}">
                </div>
                
                    
                <button type="submit" class="btn btn-primary float-right" onclick="return confirm('is the details of {{content.Name}} true ?')">verify</button>
            </form>
            <label for="">AAdhar</label><br>
                    <img src="/images/unworker/{{content._id}}.png" alt="" style="width:100px;heiht:auto" id="imgview">
        </div>

    </div>
</div>